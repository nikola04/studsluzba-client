                <Label text="Zvanje"/>
                <ComboBox fx:id="zvanjaCb" prefWidth="250"/>

                <Label text="Aktivno"/>
                <CheckBox fx:id="zvanjeAktivno" prefWidth="250"/>

                <HBox spacing="10" alignment="center">
                    <Button text="Dodaj" onAction="#handleAddZvanje"/>
