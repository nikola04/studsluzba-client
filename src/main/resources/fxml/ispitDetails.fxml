<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.raflab.studsluzbadesktopclient.controllers.IspitDetailsController"
            prefHeight="650.0" prefWidth="850.0">
    <TabPane AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
             AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
             tabClosingPolicy="UNAVAILABLE">
        <Tab text="Podaci">
            <VBox spacing="20">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>
                <GridPane hgap="25" vgap="15"
                          style="-fx-background-color: #f8f9fa; -fx-padding: 25; -fx-background-radius: 10; -fx-border-color: #dee2e6; -fx-border-radius: 10;">
                    <columnConstraints>
                        <ColumnConstraints minWidth="150"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>
                    <Label text="Predmet:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <Label fx:id="lblPredmet" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"
                           style="-fx-font-weight: bold;"/>

                    <Label text="Nastavnik:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <Label fx:id="lblNastavnik" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Ispitni rok:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <Label fx:id="lblIspitniRok" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Datum:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <Label fx:id="lblDatum" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Vreme:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <Label fx:id="lblVreme" text="-" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                    <Label text="Status:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                    <Label fx:id="lblStatus" text="-" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>
        </Tab>

        <Tab text="Prijava ispita">
            <VBox spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Label text="Indeks:" style="-fx-font-weight: bold;"/>
                    <TextField fx:id="txtIndeksPrijava" promptText="npr. RN125"
                               style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 4;"/>
                    <Region HBox.hgrow="ALWAYS" />
                    <Button text="Prijavi studenta" onAction="#handleSavePrijava"
                            style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 6; -fx-cursor: hand;"/>
                </HBox>

                <TableView fx:id="tblPrijave" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colPrijavaIndeks" text="Indeks" prefWidth="120"/>
                        <TableColumn fx:id="colPrijavaStudent" text="Student" prefWidth="250"/>
                        <TableColumn fx:id="colPrijavaDatum" text="Datum prijave" prefWidth="150"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="−" onAction="#handleDeletePrijava"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-min-width: 40;" />
                    <Label text="Select row for deletion" style="-fx-text-fill: #95a5a6; -fx-font-size: 11px;" />
                </HBox>
            </VBox>
        </Tab>

        <Tab text="Izlazak na ispit">
            <VBox spacing="15">
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
                <HBox spacing="15" alignment="BOTTOM_LEFT">
                    <VBox spacing="5">
                        <Label text="Indeks:" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtIndeksIzlazak" prefWidth="120" style="-fx-border-color: #bdc3c7; -fx-border-radius: 4;"/>
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Poeni:" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtPoeni" prefWidth="60" style="-fx-border-color: #bdc3c7; -fx-border-radius: 4;"/>
                    </VBox>
                    <VBox spacing="5" HBox.hgrow="ALWAYS">
                        <Label text="Napomena:" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtNapomena" style="-fx-border-color: #bdc3c7; -fx-border-radius: 4;"/>
                    </VBox>
                    <Button text="Unesi rezultat" onAction="#handleSaveIzlazak"
                            style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 6; -fx-cursor: hand;"/>
                </HBox>

                <Region HBox.hgrow="ALWAYS" />

                <TableView fx:id="tblIzlasci" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colIzlazakIndeks" text="Indeks" prefWidth="100"/>
                        <TableColumn fx:id="colIzlazakStudent" text="Student" prefWidth="200"/>
                        <TableColumn fx:id="colIzlazakPoeni" text="Poeni"/>
                        <TableColumn fx:id="colIzlazakNapomena" text="Napomena" prefWidth="150"/>
                        <TableColumn fx:id="colIzlazakPonisten" text="Poništen"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <Button text="−" onAction="#handleDeleteIzlazak"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-min-width: 40;" />
                    <Label text="Select row for deletion" style="-fx-text-fill: #95a5a6; -fx-font-size: 11px;" />
                </HBox>
            </VBox>
        </Tab>
        <Tab text="Rezultati">
            <VBox spacing="15" style="-fx-padding: 20;">
                <HBox alignment="CENTER_LEFT" spacing="15">
                    <Label text="Konačni rezultati ispita"
                           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <Region HBox.hgrow="ALWAYS" />

                    <Button text="Generiši Izveštaj" onAction="#handleGenerateIzvestaj"
                            style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15; -fx-background-radius: 6; -fx-cursor: hand;"/>
                </HBox>

                <Separator/>

                <TableView fx:id="tblRezultati" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="colRezultatIndeks" text="Indeks" prefWidth="120"/>
                        <TableColumn fx:id="colRezultatStudent" text="Student" prefWidth="250"/>
                        <TableColumn fx:id="colRezultatPredispitne" text="Predispitne" prefWidth="120"/>
                        <TableColumn fx:id="colRezultatIspit" text="Ispit" prefWidth="120"/>
                        <TableColumn fx:id="colRezultatUkupno" text="Ukupno" prefWidth="120"
                                     style="-fx-font-weight: bold;"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>
        </Tab>
    </TabPane>
</AnchorPane>