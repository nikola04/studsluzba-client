<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.raflab.studsluzbadesktopclient.controllers.NewIspitController">
    <top>
        <fx:include source="menuBar.fxml"/>
    </top>

    <center>
        <TabPane fx:id="ispitTabPane">
            <Tab text="Novi Ispit" closable="false">
                <ScrollPane fitToWidth="true">
                    <VBox spacing="20">
                        <padding>
                            <Insets top="25" right="25" bottom="25" left="25"/>
                        </padding>

                        <Label text="Kreiranje novog ispitnog roka"
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                        <Separator/>

                        <GridPane hgap="15" vgap="15">
                            <columnConstraints>
                                <ColumnConstraints minWidth="130" />
                                <ColumnConstraints hgrow="ALWAYS" />
                            </columnConstraints>

                            <Label text="Ispitni rok:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="cmbIspitniRok" maxWidth="Infinity"
                                      promptText="Izaberite rok" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                            <Label text="Predmet:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="cmbPredmet" maxWidth="Infinity"
                                      promptText="Izaberite predmet" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                            <Label text="Nastavnik:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                            <ComboBox fx:id="cmbNastavnik" maxWidth="Infinity"
                                      promptText="Prvo izaberite predmet" GridPane.rowIndex="2" GridPane.columnIndex="1"
                                      disable="true"/>

                            <Separator GridPane.rowIndex="3" GridPane.columnSpan="2"/>

                            <Label text="Datum održavanja:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                            <DatePicker fx:id="dpDatum" maxWidth="Infinity" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                            <Label text="Vreme početka:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                            <TextField fx:id="txtVreme" promptText="HH:mm (npr. 09:00)" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                            <Label text="Status:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                            <CheckBox fx:id="chkZakljucen" text="Ispit je zaključen" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                        </GridPane>
                    </VBox>
                </ScrollPane>
            </Tab>
        </TabPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" spacing="15" style="-fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-width: 1 0 0 0;">
            <padding>
                <Insets top="15" bottom="15"/>
            </padding>
            <Button text="Otkaži" onAction="#handleCancel" prefWidth="100"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
            <Button text="Sačuvaj" onAction="#handleSave" prefWidth="100"
                    style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </HBox>
    </bottom>
</BorderPane>
