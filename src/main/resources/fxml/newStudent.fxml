<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.raflab.studsluzbadesktopclient.controllers.NewStudentController">

    <top>
        <fx:include source="menuBar.fxml"/>
    </top>

    <center>
        <BorderPane style="padding: 0 40;">
            <center>
                <fx:include source="studentPodaciTabPane.fxml"/>
            </center>
            <bottom>
                <VBox alignment="CENTER">
                    <padding>
                        <Insets top="20" bottom="50" />
                    </padding>
                    <Button text="Save" onAction="#handleSaveStudent"
