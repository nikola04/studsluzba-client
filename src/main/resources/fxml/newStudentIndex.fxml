<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.raflab.studsluzbadesktopclient.controllers.NewStudentIndexController"
            prefHeight="450.0" prefWidth="500.0">

    <VBox spacing="20" AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <Label text="New Student Index" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Separator />

        <GridPane hgap="15" vgap="15">
            <columnConstraints>
                <ColumnConstraints minWidth="150" prefWidth="150" />
                <ColumnConstraints hgrow="ALWAYS" />
            </columnConstraints>

            <Label text="Godina upisa:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
            <TextField fx:id="godinaTf" promptText="npr. 2023" GridPane.rowIndex="0" GridPane.columnIndex="1" />

            <Label text="Studijski program:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
            <ComboBox fx:id="studProgramCb" maxWidth="Infinity" promptText="Izaberi program..." GridPane.rowIndex="1" GridPane.columnIndex="1" />

            <Label text="Način finansiranja:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
            <ComboBox fx:id="nacinFinansiranjaCb" maxWidth="Infinity" promptText="Izaberi način..." GridPane.rowIndex="2" GridPane.columnIndex="1" />

            <Label text="Važi od:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
            <DatePicker fx:id="vaziOdDp" maxWidth="Infinity" GridPane.rowIndex="3" GridPane.columnIndex="1" />

            <Label text="Status:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
            <CheckBox fx:id="aktivanChb" text="Aktivan indeks" selected="true" GridPane.rowIndex="4" GridPane.columnIndex="1" />
        </GridPane>

        <Separator />

        <HBox spacing="10" alignment="CENTER_RIGHT">
            <Button text="Cancel" onAction="#handleCancel"
                style="-fx-background-color: #bdc3c7; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 12; -fx-background-radius: 6; -fx-cursor: hand;"/>
            <Button text="Save" onAction="#handleSave"
                style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 12; -fx-background-radius: 6; -fx-cursor: hand;"/>
        </HBox>

    </VBox>
</AnchorPane>