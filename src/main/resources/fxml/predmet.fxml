<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.raflab.studsluzbadesktopclient.controllers.PredmetController">
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE">
            <Tab text="Osnovni podaci">
                <BorderPane>
                    <center>
                        <ScrollPane fitToWidth="true">
                            <HBox alignment="CENTER">
                                <padding><Insets top="30" bottom="30"/></padding>
                                <GridPane hgap="15" vgap="12" alignment="CENTER">
                                    <Label text="Šifra predmeta:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtSifra" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                                    <Label text="Naziv:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtNaziv" GridPane.rowIndex="1" GridPane.columnIndex="1" prefWidth="300"/>

                                    <Label text="ESPB bodovi:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtEspb" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                                    <Label text="Fond časova (Predavanja):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtFondPredavanja" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                                    <Label text="Fond časova (Vežbe):" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                                    <TextField fx:id="txtFondVezbe" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                                    <Label text="Tip predmeta:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                                    <CheckBox fx:id="chkObavezan" text="Obavezan predmet" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                                    <Label text="Opis:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                                    <TextArea fx:id="txtOpis" GridPane.rowIndex="6" GridPane.columnIndex="1" prefHeight="100" wrapText="true"/>

                                    <Label text="Studijski program:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                                    <ComboBox fx:id="studProgramCb" maxWidth="Infinity" promptText="Izaberi program..." GridPane.rowIndex="7" GridPane.columnIndex="1" style="-fx-opacity: 0.7;"/>
                                </GridPane>
                            </HBox>
                        </ScrollPane>
                    </center>
                    <bottom>
                        <HBox alignment="CENTER" spacing="20">
                            <padding><Insets top="20" bottom="40"/></padding>
                            <Button text="Cancel" onAction="#handleCancel"
                                    style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 25; -fx-background-radius: 6; -fx-cursor: hand;"/>
                            <Button text="Save" onAction="#handleSave"
                                    style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 25; -fx-background-radius: 6; -fx-cursor: hand;"/>
                        </HBox>
                    </bottom>
                </BorderPane>
            </Tab>

            <Tab text="Drži predmet">
                <HBox spacing="15" style="-fx-background-color: white; -fx-padding: 15;">

                    <VBox spacing="10" HBox.hgrow="ALWAYS">
                        <TableView fx:id="tblDrziPredmet" VBox.vgrow="ALWAYS" style="-fx-border-color: #dee2e6;">
                            <columns>
                                <TableColumn text="ID" style="-fx-alignment: CENTER;">
                                    <cellValueFactory><PropertyValueFactory property="id"/></cellValueFactory>
                                </TableColumn>

                                <TableColumn text="NastavnikID" style="-fx-alignment: CENTER;">
                                    <cellValueFactory><PropertyValueFactory property="nastavnikId"/></cellValueFactory>
                                </TableColumn>

                                <TableColumn fx:id="colIme" text="Ime" prefWidth="120" />
                                <TableColumn fx:id="colPrezime" text="Prezime" prefWidth="120" />
                                <TableColumn fx:id="colSkolskaGodina" text="ŠkolskaGodinaID" prefWidth="120" style="-fx-alignment: CENTER;" />
                            </columns>
                        </TableView>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Button text="−" onAction="#handleRemoveDrziPredmet"
                                    style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-min-width: 40; -fx-cursor: hand;" />
                            <Label text="Select row for deletion" style="-fx-text-fill: #95a5a6; -fx-font-size: 11px;" />
                        </HBox>
                    </VBox>

                    <VBox spacing="20" prefWidth="320" minWidth="320"
                          style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #dee2e6; -fx-border-radius: 10; -fx-border-width: 1;">
                        <padding><Insets top="25" right="20" bottom="25" left="20" /></padding>

                        <VBox spacing="5">
                            <Label text="Novo angažovanje" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                            <Separator />
                        </VBox>

                        <VBox spacing="15">
                            <VBox spacing="8">
                                <Label text="Nastavnik" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;" />
                                <ComboBox fx:id="cmbNastavnik" maxWidth="Infinity" promptText="Izaberite nastavnika"
                                          style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8;" />
                            </VBox>

                            <VBox spacing="8">
                                <Label text="ŠkolskaGodina" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;" />
                                <ComboBox fx:id="cmbSkolskaGodina" maxWidth="Infinity" promptText="Izaberite godinu"
                                          style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8;" />
                            </VBox>
                        </VBox>

                        <Region VBox.vgrow="ALWAYS" />
                        <Button text="Save" onAction="#handleAddDrziPredmet" maxWidth="Infinity"
                                style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10 12; -fx-background-radius: 8; -fx-cursor: hand;" />
                    </VBox>

                </HBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>