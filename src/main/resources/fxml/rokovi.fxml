<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.raflab.studsluzbadesktopclient.controllers.IspitniRokoviController">
    <top>
        <fx:include source="menuBar.fxml"/>
    </top>

    <center>
        <TabPane fx:id="rokTabPane" xmlns:fx="http://javafx.com/fxml">
            <Tab text="Pretraga" closable="false">
                <VBox spacing="10">
                    <padding>
                        <Insets top="15" right="15" bottom="15" left="15"/>
                    </padding>

                    <Label text="Pregled svih ispitnih rokova"
                           style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>

                    <VBox spacing="10" VBox.vgrow="ALWAYS">
                        <TableView fx:id="tblIspitniRokovi" VBox.vgrow="ALWAYS"
                                   style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-padding: 0;">
                            <columns>
                                <TableColumn fx:id="colNaziv" text="Mesec" prefWidth="150"/>
                                <TableColumn fx:id="colPocetak" text="Datum početka" prefWidth="150"/>
                                <TableColumn fx:id="colKraj" text="Datum kraja" prefWidth="150"/>
                                <TableColumn fx:id="colSkolskaGodina" text="Školska godina" prefWidth="150"/>
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                            </columnResizePolicy>
                        </TableView>

                        <HBox spacing="10" alignment="CENTER_LEFT">
                            <Button text="−"
                                    onAction="#handleDeleteRok"
                                    style="-fx-background-color: #e74c3c;-fx-text-fill: white;-fx-font-weight: bold;-fx-background-radius: 5;-fx-min-width: 40;" />

                            <Label text="Select ispitni rok for deletion"
                                   style="-fx-text-fill: #95a5a6; -fx-font-size: 11px;" />
                        </HBox>
                    </VBox>
                </VBox>
            </Tab>
            <Tab text="Novi" closable="false">
                <VBox spacing="20">
                    <padding>
                        <Insets top="25" right="25" bottom="25" left="25"/>
                    </padding>

                    <Label text="Kreiranje novog ispitnog roka"
                           style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
                    <Separator/>

                    <GridPane hgap="15" vgap="15">
                        <columnConstraints>
                            <ColumnConstraints minWidth="130" />
                            <ColumnConstraints hgrow="ALWAYS" />
                        </columnConstraints>

                        <Label text="Školska godina:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                        <ComboBox fx:id="cmbSkolskaGodina" maxWidth="Infinity"
                                  promptText="Izaberite školsku godinu" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Datum početka:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="dpPocetak" maxWidth="Infinity" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Datum kraja:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                        <DatePicker fx:id="dpKraj" maxWidth="Infinity" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                    </GridPane>

                    <Region VBox.vgrow="ALWAYS" />

                    <HBox alignment="CENTER_RIGHT" spacing="15">
                        <Button text="Otkaži" onAction="#handleCancel" prefWidth="100"
                                style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
                        <Button text="Sačuvaj" onAction="#handleSave" prefWidth="100"
                                style="-fx-background-color: #2c3e50; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
                    </HBox>
                </VBox>
            </Tab>
        </TabPane>
    </center>
</BorderPane>
