<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.geometry.Insets?>
<BorderPane fx:id="searchNastavnikPane" prefHeight="700" prefWidth="950" style="-fx-background-color: white;" xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.raflab.studsluzbadesktopclient.controllers.SearchNastavnikController">
    <top>
        <fx:include source="menuBar.fxml"/>
    </top>
    <center>
        <VBox spacing="15" style="-fx-background-color: white;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
            </padding>

            <Label text="Pretraga Nastavnika"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />

            <HBox spacing="15" VBox.vgrow="ALWAYS">

                <VBox spacing="10" HBox.hgrow="ALWAYS">
                    <TableView fx:id="nastavnikTable" VBox.vgrow="ALWAYS"
                               style="-fx-background-color: white; -fx-border-color: #dee2e6; -fx-border-width: 1; -fx-padding: 0;">
                        <columns>
                            <TableColumn prefWidth="50" text="ID">
                                <cellValueFactory><PropertyValueFactory property="id" /></cellValueFactory>
                            </TableColumn>
                            <TableColumn prefWidth="120" text="Ime">
                                <cellValueFactory><PropertyValueFactory property="ime" /></cellValueFactory>
                            </TableColumn>
                            <TableColumn prefWidth="120" text="Prezime">
                                <cellValueFactory><PropertyValueFactory property="prezime" /></cellValueFactory>
                            </TableColumn>
                            <TableColumn prefWidth="200" text="Email">
                                <cellValueFactory><PropertyValueFactory property="email" /></cellValueFactory>
                            </TableColumn>
                        </columns>
                        <columnResizePolicy>
                            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                        </columnResizePolicy>
                    </TableView>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Button text="âˆ’"
                                onAction="#handleDeleteNastavnik"
                                style="-fx-background-color: #e74c3c;-fx-text-fill: white;-fx-font-weight: bold;-fx-background-radius: 5;-fx-min-width: 40;" />

                        <Label text="Select nastavnik for detailed profile or deletion"
                               style="-fx-text-fill: #95a5a6; -fx-font-size: 11px;" />
                    </HBox>
                </VBox>

                <VBox spacing="20" prefWidth="300" minWidth="300">
                    <VBox spacing="15" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10; -fx-border-color: #dee2e6; -fx-border-radius: 10; -fx-border-width: 1;">

                    <padding>
                            <Insets top="25" right="20" bottom="25" left="20" />
                        </padding>

                        <VBox spacing="5">
                            <Label text="Apply Filters" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                            <Separator />
                        </VBox>

                        <VBox spacing="15">
                            <VBox spacing="8">
                                <Label text="Ime" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;" />
                                <TextField fx:id="nastavnikNameTf" promptText="Unesite ime..."
                                           style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 8;" />
                            </VBox>

                            <VBox spacing="8">
                                <Label text="Prezime" style="-fx-text-fill: #7f8c8d; -fx-font-weight: bold;" />
                                <TextField fx:id="nastavnikLastNameTf" promptText="Unesite prezime..."
                                           style="-fx-background-color: white; -fx-border-color: #bdc3c7; -fx-border-radius: 8; -fx-padding: 8;" />
                            </VBox>
                        </VBox>
                    </VBox>
                </VBox>
            </HBox>
        </VBox>
    </center>
</BorderPane>
