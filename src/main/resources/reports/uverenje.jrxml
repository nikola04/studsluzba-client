<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="uverenje" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <parameter name="studentImePrezime" class="java.lang.String"/>
    <parameter name="brojIndeksa" class="java.lang.String"/>
    <parameter name="studijskiProgram" class="java.lang.String"/>
    <parameter name="skolskaGodina" class="java.lang.Integer"/>
    <parameter name="danasnjiDatum" class="java.lang.String"/>
    <parameter name="jmbg" class="java.lang.String"/>
    <parameter name="mestoRodjenja" class="java.lang.String"/>

    <title>
        <band height="100">
            <staticText>
                <reportElement x="0" y="30" width="555" height="40"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font size="20" isBold="true"/>
                </textElement>
                <text><![CDATA[UVERENJE O STUDIRANJU]]></text>
            </staticText>
        </band>
    </title>

    <detail>
        <band height="280">
            <staticText>
                <reportElement x="40" y="0" width="480" height="30"/>
                <textElement verticalAlignment="Middle">
                    <font size="12"/>
                </textElement>
                <text><![CDATA[Potvrdjuje se da je student:]]></text>
            </staticText>

            <textField>
                <reportElement x="40" y="35" width="480" height="25"/>
                <textElement verticalAlignment="Middle">
                    <font size="13" isBold="true"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{studentImePrezime}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="40" y="60" width="480" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA["JMBG: " + $P{jmbg} + ", Mesto rodjenja: " + $P{mestoRodjenja}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="40" y="85" width="480" height="20"/>
                <textElement verticalAlignment="Middle">
                    <font size="11"/>
                </textElement>
                <textFieldExpression><![CDATA["Sa brojem indeksa: " + $P{brojIndeksa}]]></textFieldExpression>
            </textField>

            <line>
                <reportElement x="40" y="115" width="480" height="1"/>
                <graphicElement>
                    <pen lineWidth="0.5" lineStyle="Dotted"/>
                </graphicElement>
            </line>

            <textField isStretchWithOverflow="true">
                <reportElement x="40" y="130" width="480" height="50"/>
                <textElement textAlignment="Justified" verticalAlignment="Top" lineSpacing="1_1_2">
                    <font size="12"/>
                </textElement>
                <textFieldExpression><![CDATA["Upisan na studijski program: " + $P{studijskiProgram} + ", skolske " + $P{skolskaGodina} + "/" + ($P{skolskaGodina} + 1) + ". godine, i u tekucoj skolskoj godini ima status redovnog studenta."]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="40" y="210" width="480" height="45"/>
                <textElement textAlignment="Justified">
                    <font size="10" isItalic="true"/>
                </textElement>
                <text><![CDATA[Ovo uverenje se izdaje na licni zahtev studenta, a u svrhu ostvarivanja prava na studentski standard, regulisanje statusnih pitanja, dobijanje vize ili regulisanje porodicne penzije i u druge svrhe se ne moÅ¾e koristiti.]]></text>
            </staticText>
        </band>
    </detail>

    <pageFooter>
        <band height="80">
            <textField>
                <reportElement x="40" y="20" width="200" height="20"/>
                <textElement verticalAlignment="Middle"/>
                <textFieldExpression><![CDATA["U Beogradu, dana " + $P{danasnjiDatum}]]></textFieldExpression>
            </textField>

            <staticText>
                <reportElement x="350" y="20" width="170" height="40"/>
                <textElement textAlignment="Center" verticalAlignment="Top"/>
                <text><![CDATA[M.P.   ______________________
Potpis ovlascenog lica]]></text>
            </staticText>
        </band>
    </pageFooter>
</jasperReport>